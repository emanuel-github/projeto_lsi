import projeto.lsi.pojo.Usuario;

public class Teste {

	public static void main(String[] args) throws PersistenciaException, ClassNotFoundException, SQLException {
		
		Usuario usuario = new Usuario();
		usuario.setNome("Emanuel");
		usuario.setEmail("emanuelrodrigues@rocketmail.com");
		usuario.setLogin("emanuel");
		usuario.setSenha("1234");
		
		Connection con = ConexaoFactory.getInstance().getConnection();
		UsuarioDAO dao = new UsuarioDAO(con);
		dao.cadastrar(usuario);
		
		
		
		
		

	}

}
